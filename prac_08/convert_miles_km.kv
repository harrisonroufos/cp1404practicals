BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: user_input
            text: app.user_input_number
            size_hint_x: 0.7
            font_size: 48
            on_text: app.handle_conversion(user_input.text)
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3
            Button:
                text: "Up"
                on_press: app.handle_increment(user_input.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(user_input.text, -1)
    BoxLayout:
        orientation: "vertical"
#        Button:
#            text: "Convert miles to km"
#            on_press: app.handle_conversion(user_input.text)
        Label:
            text: app.conversion_result
            font_size: 48
            color: (1, 1, 0, 1)
